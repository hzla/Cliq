$("#message-history").append("<%= escape_javascript render partial: 'show', locals: {message: @message } %>");
$("#<%= @user.id %> .convo-details .convo-last-message").text("<%= @conversation.last_message %>")
$('#message-history')[0].scrollTop = $('#message-history')[0].scrollHeight
$('#new_message')[0].reset()

<% broadcast(user_path(@user) + "/messages") do %>
	if ($('.conversation.current').attr('id') == <%= current_user.id.to_s %> ){
  	$("#message-history").append("<%= escape_javascript render partial: 'reverse_show', locals: {message: @message } %>");
  	$("#<%= current_user.id %> .convo-details .convo-last-message").text("<%= @conversation.last_message %>")
  	$('#message-history')[0].scrollTop = $('#message-history')[0].scrollHeight
	} else if ($('.messages.active.side-icon').length > 0) {
		$("#<%= current_user.id %> .convo-details .convo-last-message").text("<%= @conversation.last_message %>")
		$('.messages .counter').removeClass('hidden')
		$('.messages .counter').text(<%= @user.message_count %>)
	} else {
		$('.messages .counter').removeClass('hidden')
		$('.messages .counter').text(<%= @user.message_count %>)
	}
<% end %>


