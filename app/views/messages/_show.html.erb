<div class="message-block" id="message-<%= message.id %>">
	<% if message.user_id == current_user.id %>
		<div class="date sent head-6 light-gray">
			<%= message.date current_user %>
		</div>
		<div class="message sent head-5">
			<%= message.body %>
		</div>
	<% else %>
		<div class="message received head-5">
			<%= message.body %>
		</div>
		<div class="date recieved head-6 light-gray">
			<%= message.date current_user %>
		</div>
	<% end %>
</div>

