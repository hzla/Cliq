if ($('.current-thread').length > 0) {
	$('.current-thread').find(".message-history").append("<%= escape_javascript render partial: 'show', locals: {message: @message } %>");
} else {
	$(".message-history").append("<%= escape_javascript render partial: 'show', locals: {message: @message } %>");
}


<% message = @conversation.last_message.gsub!(/"/, '').html_safe %>
$("#<%= @user.id %> .convo-details .convo-last-message").text("<%= message %>")
$('.message-history')[0].scrollTop = $('.message-history')[0].scrollHeight
$('.sending-progress').text('Done').addClass('animated fadeOut')
$('.sending-progress').bind('oanimationend animationend webkitAnimationEnd', function(){
	$('.sending-progress').hide()
})


