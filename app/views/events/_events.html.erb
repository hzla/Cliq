<% events.each do |event| %>
	<div class="upcoming-event">
		
		<div class="upcoming-event-picture">
			<%= image_tag event.image_url || "cliq.png", :class => "event-picture" %>
		</div>
		
		<div class="upcoming-event-info">
			
			<div class="upcoming-event-title invite-row">
				<%= event.title %>
			</div>

			<div class="white upcoming-event-time invite-row">
				<%= event.time current_user %>
			</div>

			<div class="gray upcoming-event-location invite-row">
				<%= event.location %>
			</div>

			<div class="upcoming-event-others invite-row">
				<% event.users.take(2).each do |user| %>
					<%= link_to other_user_path(user), :class => "other-user", remote: true do %>
						<%= image_tag (user.profile_pic_url || 'cliq.png'), :class => "attendee" %>
						<div class="attendee-name"><%= user.first_name %></div>
					<% end %>
				<% end %>
			</div>

			<div class="upcoming-event-quantity invite-row">
				<% if event.attendees.length < 0 %>
					and <%= event.attendees.length %> others
				<% end %>
			</div>
		</div>
	</div>
<% end %>
<% if events.empty? %>
	<div id="empty-events">No Events to Show</div>
<% end %>