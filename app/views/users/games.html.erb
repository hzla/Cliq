	  faye.unsubscribe("/games")
	  if (typeof sub === "undefined") { 
	  	sub = faye.subscribe("/games", function(data) {
	    var message = $.parseJSON(data)
	    	console.log(message)
	    	console.log(data)
	    	console.log(data.go)
	    	if (message.go) {
	    		$('.other-start').click()
	    		return
	    	}
	    	if (message.won == false) {
	    		document.location.reload()
	    	}
	    	if (message.won) {
	    		if ($('.you-win:visible').length < 1) {
	    			$('.you-lose').show() 
	    		}
	    	} else {
	    	
	    	}
	  	});
		} 
	});
</script>



